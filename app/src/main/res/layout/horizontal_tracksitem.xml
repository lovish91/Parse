<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/hrnztl_itemimage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/album_art" />

    <TextView
        android:id="@+id/hrnztl_itemtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18dp"
        android:textColor="#060606"
        android:textStyle="bold"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/hrnztl_itemusrnme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name" />

    <TextView
        android:id="@+id/hrnztl_itemgenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hrnztl_itemgheart"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/unliked_heart" />

        <TextView
            android:id="@+id/hrnztl_itemhrtno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:text="0" />

        <ImageView
            android:id="@+id/hrnztl_itemgplay"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_action_name2" />

        <TextView
            android:id="@+id/hrnztl_itemplayno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginRight="8dp"
            android:text="0" />

        <ImageView
            android:id="@+id/hrnztl_itemgdurtn"
            android:layout_width="17dp"
            android:layout_marginRight="3dp"
            android:layout_height="17dp"
            android:src="@drawable/duration" />

        <TextView
            android:id="@+id/hrnztl_itemdurtnno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="0" />

    </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>