<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/album_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/album_art"
                android:layout_marginRight="5dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/Track_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textSize="17dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="hello"
                android:layout_toRightOf="@id/album_image"
                android:textColor="#080808" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="hello"
                android:layout_margin="0dp"
                android:layout_below="@id/Track_name"
                android:layout_toRightOf="@id/album_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/user"
                android:layout_below="@+id/user_name"
                android:layout_toRightOf="@id/album_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/album_image"
                android:layout_below="@id/user">

                <ImageView
                    android:id="@+id/vertcl_itemgheart"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/unliked_heart" />

                <TextView
                    android:id="@+id/vertcl_itemhrtno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textSize="13dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/vertcl_itemgplay"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_action_name2" />

                <TextView
                    android:id="@+id/vertcl_itemplayno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginRight="8dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/vertcl_itemgdurtn"
                    android:layout_width="17dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="17dp"
                    android:src="@drawable/duration" />

                <TextView
                    android:id="@+id/vertcl_itemdurtnno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="0" />

            </LinearLayout>
        </RelativeLayout>
</LinearLayout>